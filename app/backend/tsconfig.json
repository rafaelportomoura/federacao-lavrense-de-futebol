{
  "compilerOptions": {
    "typeRoots": [
      "./node_modules/@types",
      "app/src/declarations"
    ],
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "baseUrl": "app/src",
    "outDir": "dist"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "tests"
  ],
  "compileOnSave": false,
  "ts-node": {
    "files": true
  },
}